{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [
    "index.ts",
    "auth-helpers.ts",
    "supabase-client.ts",
    "supabase-types.ts",
    "rpc-client.ts",
    "analytics-client.ts",
    "realtime-client.ts",
    "validation.ts",
    "storage-client.ts",
    "logger.ts",
    "error-tracking.ts",
    "monitoring.ts",
    "api-client.ts",
    "offline-handler.ts",
    "request-interceptor.ts",
    "roles.ts",
    "workflow-helpers.ts",
    "api-helpers.ts",
    "form-validators.ts",
    "middleware.ts",
    "status-utils.ts",
    "app-context.tsx",
    "auth-context.tsx",
    "auth-schemas.ts",
    "auth-actions.ts",
    "kpi-client.ts",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "notifications/**/*.ts",
    "webhooks/**/*.ts",
    "types/**/*.ts",
    "i18n/**/*.ts",
    "i18n/**/*.tsx",
    "stores/**/*.ts",
    "stores/**/*.tsx",
    "providers.tsx",
    "query-client.tsx",
    "query-utils.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "vitest.config.ts"
  ]
}
